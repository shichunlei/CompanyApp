<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="app_pop">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>

    <style name="title_font">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/text_white_shadow_color</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="login_edittext">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/gray_font</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="yellowpage_text_key">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_font</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="yellowpage_text_value">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_font</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="listview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:headerDividersEnabled">@color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:divider">#c0c0c0</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:transcriptMode">alwaysScroll</item>
    </style>

</resources>