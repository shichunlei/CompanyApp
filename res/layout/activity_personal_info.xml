<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roundimage="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <include
        android:id="@+id/top_title"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/top_title" >

        <com.cells.companyapp.widget.CircularImageView
            android:id="@+id/img_regist_add_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/add_photo"
            roundimage:border_color="@color/base_black_gray"
            roundimage:border_width="2dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                style="@style/login_edittext"
                android:layout_width="wrap_content"
                android:text="签名" />

            <TextView
                android:id="@+id/tv_personal_info_signature"
                style="@style/login_edittext"
                android:gravity="right|center_vertical"
                android:text="个人签名" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/login_edittext"
                    android:layout_width="wrap_content"
                    android:text="用户名" />

                <TextView
                    android:id="@+id/tv_personal_info_name"
                    style="@style/login_edittext"
                    android:gravity="right|center_vertical"
                    android:text="用户名!~~~~~~" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/login_edittext"
                    android:layout_width="wrap_content"
                    android:text="邮箱" />

                <TextView
                    android:id="@+id/tv_personal_info_email"
                    style="@style/login_edittext"
                    android:gravity="right|center_vertical"
                    android:text="shichunlei@14cells.com" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/login_edittext"
                    android:layout_width="wrap_content"
                    android:text="性别" />

                <TextView
                    android:id="@+id/tv_personal_info_gender"
                    style="@style/login_edittext"
                    android:gravity="right|center_vertical"
                    android:text="男" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line_color" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>